[user]
    name              = Hubert Lefevre
    email             = hubelefevre@gmail.com

[color]
    grep              = true
    diff              = true
    branch            = true
    interactive       = true
    status            = true
    blame             = true
    ui                = true

[core]
    editor            = vim
    logAllRefUpdates  = false

[help]
    autocorrect       = 1

[alias]
    sub-reset         = "!f() { git submodule update --init --recursive --remote; git submodule update --recursive; }; f"
    rm                = rm -r
    ls                = log --stat --decorate --graph --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %Cred%d%n%Creset%x09%s%n'
    l                 = log --graph --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %Cred%d%n%Creset%x09%s%n'
    log-path          = log --graph -M --follow --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %Cred%d%n%Creset%x09%s%n'
    g                 = grep -ni --break --heading --color=always
    stak              = stash save -k -u
    stawp             = stash show -p
    wip               = commit -a -m [ci\\ skip]\\ WIP
    unwip             = reset HEAD~1
    blame-log         = log -p -M --follow --stat --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %n%Creset%x09%s%n'
    uncommit          = reset --soft HEAD~1
    delete-commit     = reset --hard HEAD~1
    ci-skip           = commit --allow-empty -m [ci\\ skip]

[push]
    default           = simple

[pull]
    rebase            = true
    recurseSubmodules = true

[fetch]
    prune             = true
    recurseSubmodules = true

[merge]
    tool              = vimdiff

[diff]
    tool              = vimdiff
    submodule         = log

[color "diff"]
    #branch           = red
    meta              = blue
    #context          = cyan
    frag              = cyan
    func              = yellow

[color "status"]
    header            = white
    branch            = blue bold
    nobranch          = red bold
    untracked         = magenta bold
    added             = green

[color "branch"]
    remote            = yellow

[color "blame"]
    author            = red

[gui]
    fastCopyBlame     = true

[status]
    submoduleSummary  = true
