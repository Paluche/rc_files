[color]
    grep        = true
    diff        = true
    branch      = true
    interactive = true
    status      = true
    blame       = true
    ui          = true

[core]
    editor      = vim
    logAllRefUpdates = false

[alias]
    l           = log --graph --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %n%Creset%x09%s%n'
    g           = grep -ni --break --heading --color=always
    stak        = stash save -k -u
    stawp       = stash show -p
    wip         = commit -a -m WIP
    unwip       = reset HEAD~1

[push]
    default     = simple

[ui]
    color       = true

[pull]
    rebase      = true

[fetch]
    prune       = true

[merge]
	tool = meld
