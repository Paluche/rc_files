    ui          = true

[core]
  editor        = vim

[alias]
  l             = log --graph --date=local --pretty=format:'%C(yellow)%h%Cblue %ad%Cgreen %an %n%Creset%x09%s%n'
  g             = grep -ni --break --heading --color=always
  c             = commit
  ca            = commit -a
  cm            = commit --amend
  cam           = commit -a --amend
  stak          = stash save -k -u

[push]
	default = simple

[ui]
	color = true

[pull]
    rebase = true
