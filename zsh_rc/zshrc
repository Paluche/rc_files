function ssh_cam_stop_module_install()
{
    ssh -i /home/hlefevre/netatmo/camera/camera/cam_key/id_rsa root@$1 intentBroadcaster -a com.netatmo.camera.debug.MODULES_INSTALLER_STOP
}

function ssh_cam_send_camera_status()
{
    ssh -i /home/hlefevre/netatmo/camera/camera/cam_key/id_rsa root@$1 intentBroadcaster -a com.netatmo.webservice.SEND_SETCAMERASTATUS
}

