function gilr()
{
    if [ $# -eq 0 ]
    then
        strat='once'
    else
        strat=$1
    fi

    case $strat in
        always)
            ;;
        never)
            ;;
        once)
            ;;
        on_change)
            ;;
        *)
           echo 'Invalid strategy (always, never, once, on_change)'
           exit 1
           ;;
    esac

    typeset -x __GIT_GITLAB_STRATEGY="$strat"
}

alias gils='echo $__GIT_GITLAB_STRATEGY'

export __GIT_GITLAB_STRATEGY='never'
export TOOLCHAIN_DIR='/opt'


