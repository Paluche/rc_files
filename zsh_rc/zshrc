# functions
##############################################################################
# extract the files
function extract()
{
    if [[ -z "$1" ]]; then
        print -P "usage: \e[1;36mextract\e[1;0m < filename >"
        print -P "       Extract the file specified based on the extension"
    elif [[ -f $1 ]]; then
        case ${(L)1} in
            *.tar.bz2) tar -jxvf  $1;;
            *.tar.gz)  tar -zxvf  $1;;
            *.tar.xz)  tar -Jxvf  $1;;
            *.bz2)     bunzip2    $1;;
            *.gz)      gunzip     $1;;
            *.jar)     unzip      $1;;
            *.rar)     unrar x    $1;;
            *.tar)     tar -xvf   $1;;
            *.tbz2)    tar -jxvf  $1;;
            *.tgz)     tar -zxvf  $1;;
            *.zip)     unzip      $1;;
            *.Z)       uncompress $1;;
            *.7z)      7z x       $1;;
            *)         echo "Unable to extract '$1' :: Unknown extension"
        esac
    else
        echo "File ('$1') does not exist!"
    fi
}

function hexa()
{
    echo " 0 0x0 0000"
    echo " 1 0x1 0001"
    echo " 2 0x2 0010"
    echo " 3 0x3 0011"
    echo " 4 0x4 0100"
    echo " 5 0x5 0101"
    echo " 6 0x6 0110"
    echo " 7 0x7 0111"
    echo " 8 0x8 1000"
    echo " 9 0x9 1001"
    echo "10 0xa 1010"
    echo "11 0xb 1011"
    echo "12 0xc 1100"
    echo "13 0xd 1101"
    echo "14 0xe 1110"
    echo "15 0xf 1111"
}

function adb_logcat()
{
    while :
    do
        adb logcat -v time | ~/.script/adb_logcat.py $@
    done
}

