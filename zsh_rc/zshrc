function git_home()
{
    if [ -n "$__GIT_TOP_LEVEL" ]
    then
        cd $__GIT_TOP_LEVEL
    else
        echo -e "\e[31mNot in a repository"
        return 1
    fi
}

function viam()
{
    if [ -n "$__GIT_TOP_LEVEL" ]
    then
        files=($(git diff-tree --no-commit-id --name-only -r HEAD))

        if [ ${#files} -eq 0 ]
        then
            echo -e "\e[31mNo modified files in HEAD"
            return &
        fi

        vim ${files[@]}

    else
        echo -e "\e[31mNot in a repository"
        return 1
    fi
}

function vimgit()
{
    if [ -n "$__GIT_TOP_LEVEL" ]
    then
        vim $__GIT_TOP_LEVEL/$1 $2
    else
        vim $1 $2
    fi
}


function git_patch()
{
    git commit -a -m PATCH
    if [ $? -eq 0 ]
    then
        git format-patch HEAD~
        git reset HEAD~
    fi
}

function git_blame()
{
    ruby ~/.script/git_blame.rb $1 | less -R
}

function gsf()
{
    cd $__GIT_TOP_LEVEL
    echo "Enterning '$__GIT_NAME'"
    git_status
    git submodule foreach 'zsh /home/hlefevre/.zsh/functions/git_status'
}

function git_diff_origin()
{
    if [ -n "$__GIT_BRANCH_NAME" ]
    then
        git diff origin/$__GIT_BRANCH_NAME $@
    fi
}

function gbf()
{
    /home/hlefevre/work/git-branch-status/git-branch-status -l

    echo ""

    git submodule foreach "/home/hlefevre/work/git-branch-status/git-branch-status -l && echo "
}

function gcfp()
{
    git commit --fixup `git log -n 1 --pretty=format:%H $1`
}

function gacfp()
{
    git add $1
    gcfp $1
}

function git_locate()
{
    if [ -n "$__GIT_TOP_LEVEL" ]
    then
        locate $1 | grep $__GIT_TOP_LEVEL
    else
        echo -e "\e[31mNot in a repository"
    fi
}

function git_find()
{
    if [ -n "$__GIT_TOP_LEVEL" ]
    then
        find $__GIT_TOP_LEVEL -name $1
    else
        echo -e "\e[31mNot in a repository"
    fi
}

