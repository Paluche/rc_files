function git_home()
{
    dir="$(git rev-parse --show-toplevel)"
    if [ -n "$dir" ]; then
        cd $dir
    fi
}

function git_patch()
{
    git commit -a -m PATCH
    if [ $? -eq 0]; then
        git format-patch HEAD~
        git reset HEAD~
    fi
}

