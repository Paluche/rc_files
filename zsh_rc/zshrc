# Git Merge request commit compilation check.
function git_check_nsd_mr
{

   if [[ -z "$1" ]]
   then
       branch=master
   else
       if [ "$1" = "-i" ]
       then
           branch=master
           option="-i"
       fi
       branch=$2
   fi

   git rebase -x "git submodule update" \
              -x "./build.sh clean" \
              -x "./build.sh" \
              $branch $option
}

function git_check_firmware_mr
{
   if [[ -z "$1" ]]
   then
     branch=master
   else
     branch=$1
   fi

   git rebase -x "git submodule update"
              -x "make -Ccortex -j$NBPROCS MULTI_JOBS=y clean && make -Ccortex -j$NBPROCS MULTI_JOBS=y" $branch
}
compdef _git git_check_nsd_mr=git-rebase
compdef _git git_check_firmware_mr=git-rebase

