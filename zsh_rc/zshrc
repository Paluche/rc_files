function alphabravo()
{
    echo " #  *  ascii ASCII NATO        #  *  ascii ASCII NATO"
    echo " 1  A  0x61  0x41  Alpha      14  N  0x6e  0x4e  November"
    echo " 2  B  0x62  0x42  Bravo      15  O  0x6f  0x4f  Oscar"
    echo " 3  C  0x63  0x43  Charlie    16  P  0x70  0x50  Papa"
    echo " 4  D  0x64  0x44  Delta      17  Q  0x71  0x51  Quebec"
    echo " 5  E  0x65  0x45  Echo       18  R  0x72  0x52  Romeo"
    echo " 6  F  0x66  0x46  Foxtrot    19  S  0x73  0x53  Sierra"
    echo " 7  G  0x67  0x47  Golf       20  T  0x74  0x54  Tango"
    echo " 8  H  0x68  0x48  Hotel      21  U  0x75  0x55  Uniform"
    echo " 9  I  0x69  0x49  India      22  V  0x76  0x56  Victor"
    echo "10  J  0x6a  0x4a  Juliet     23  W  0x77  0x57  Whiskey"
    echo "11  K  0x6b  0x4b  Kilo       24  X  0x78  0x58  X-ray"
    echo "12  L  0x6c  0x4c  Lima       25  Y  0x79  0x59  Yankees"
    echo "13  M  0x6d  0x4d  Mike       26  Z  0x7a  0x5a  Zulu"
}


